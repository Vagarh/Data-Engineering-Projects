# PagerDuty Configuration (optional)
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

# GeoIP Configuration
GEOIP_DATABASE_PATH=./data/geoip/GeoLite2-City.mmdb
GEOIP_ASN_DATABASE_PATH=./data/geoip/GeoLite2-ASN.mmdb

# Log Generation (for testing)
LOG_GENERATION_ENABLED=true
LOGS_PER_MINUTE=100
ANOMALY_INJECTION_RATE=0.05
LOG_TYPES=web,firewall,auth,system,dns

# Security Rules Configuration
BRUTE_FORCE_THRESHOLD=10
BRUTE_FORCE_WINDOW_MINUTES=5
FAILED_LOGIN_THRESHOLD=5
SUSPICIOUS_IP_THRESHOLD=50
LARGE_UPLOAD_THRESHOLD_MB=100

# Compliance and Retention
LOG_RETENTION_DAYS=365
COMPLIANCE_MODE=PCI_DSS  # Options: PCI_DSS, HIPAA, SOX, GDPR
AUDIT_LOG_ENABLED=true

# Performance Configuration
STORM_WORKERS=2
STORM_PARALLELISM=4
ELASTICSEARCH_BULK_SIZE=1000
KAFKA_BATCH_SIZE=16384

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Development/Testing
DEBUG_MODE=false
SAMPLE_DATA_ENABLED=true
MOCK_ALERTS_ENABLED=false